<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigateOP.Page2"
             Title="第二頁面"
             BackgroundColor="LightGreen">

    <StackLayout>
        <Button x:Name="btnGoback"
                Clicked="btnGoback_Clicked"
                Text="退回上一頁"/>
        <Button x:Name="btnGoHome"
                Clicked="btnGoHome_Clicked"
                Text="直接回首頁"/>
        <Button x:Name="btnShowNavigationStack"
                Clicked="btnShowNavigationStack_Clicked"
                Text="顯示導航堆疊內容"/>
        <Label x:Name="labelStack"
               TextColor="Red" 
               FontSize="Medium"/>
    </StackLayout>

</ContentPage>